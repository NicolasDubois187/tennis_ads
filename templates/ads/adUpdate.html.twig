{% extends 'base.html.twig' %}
{% block title %}
	update Task
{% endblock %}
{% block body %}
	<section class="sectionUpdate">
		{% include 'commons/_header.html.twig' %}
		<a href="{{ path('ads') }}" class="linkUpdate">retour vers liste des t√¢ches</a>
		{{ form_start(adForm) }}
		<h2>Modifier annonce :
			{{ ad.title }}</h2>
		<div class="formUpdate">

			<div class="leftFormUpdate">
				{{ form_label(adForm.title) }}
				{{ form_widget(adForm.title, { 'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.title) }}

				{{ form_label(adForm.city) }}
				{{ form_widget(adForm.city, {'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.city) }}

				{{ form_label(adForm.price) }}
				{{ form_widget(adForm.price, { 'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.price) }}
			</div>
			<div class="rightFormUpdate">
				{{ form_label(adForm.adType) }}
				{{ form_widget(adForm.adType, { 'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.adType) }}

				{{ form_label(adForm.materialType) }}
				{{ form_widget(adForm.materialType, { 'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.materialType) }}


				{{ form_label(adForm.brand) }}
				{{ form_widget(adForm.brand, { 'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.brand) }}

				{{ form_label(adForm.media) }}
				{{ form_widget(adForm.media, { 'attr' : {'class':'adView' }}) }}
				{{ form_errors(adForm.media) }}
			</div>
		</div>
		<div class="descUpdate">
			{{ form_label(adForm.text) }}
			{{ form_widget(adForm.text, { 'attr' : {'class':'adView' }}) }}
			{{ form_errors(adForm.text) }}
		</div>
		<div class="btnFormUpdate">
			{{ form_label(adForm.envoyer) }}
			{{ form_widget(adForm.envoyer, { 'attr' : {'class':'adView' }}) }}
		</div>
		{{ form_end(adForm) }}
		<a href="{{ path('changeStatus', {'id' : ad.id}) }}" class="linkUpdate">Supprimer l'annonce</a>
		{% include 'commons/_footer.html.twig' %}
	</section>
{% endblock %}
